<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activityParkingBottomView"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@color/colorWhiteTransparency"
    app:behavior_hideable="true"
    app:behavior_peekHeight="80dp"
    app:layout_behavior="@string/bottom_sheet_behavior">


    <android.support.v7.widget.SearchView
        android:id="@+id/activityParkingSearchView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorWhiteTransparency" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/activityParkingRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activityParkingSearchView"
        android:background="@color/colorWhiteTransparency" />
</RelativeLayout>
